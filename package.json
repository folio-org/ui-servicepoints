{
  "name": "@folio/servicepoints",
  "version": "6.1.0",
  "description": "Service Points handler for Stripes",
  "repository": "folio-org/ui-servicepoints",
  "publishConfig": {
    "registry": "https://repository.folio.org/repository/npm-folio/"
  },
  "license": "Apache-2.0",
  "engines": {
    "node": ">=6.0.0"
  },
  "main": "src/index.js",
  "stripes": {
    "actsAs": [
      "handler"
    ],
    "handlerName": "eventHandler",
    "displayName": "ui-servicepoints.meta.title",
    "route": "/",
    "links": {
      "userDropdown": [
        {
          "event": "CHANGE_SERVICE_POINT",
          "caption": "ui-servicepoints.userDropdown.switchServicePoint",
          "check": "checkServicePoints"
        }
      ]
    }
  },
  "scripts": {
    "start": "stripes serve",
    "lint": "eslint .",
    "test": "stripes test karma",
    "build-mod-descriptor": "stripes mod descriptor --full --strict | jq '.[]' > module-descriptor.json ",
    "formatjs-compile": "formatjs compile-folder --ast --format simple ./translations/ui-servicepoints ./translations/ui-servicepoints/compiled"
  },
  "devDependencies": {
    "miragejs": "^0.1.32",
    "@folio/stripes": "^7.0.0",
    "@folio/stripes-core": "^8.0.0",
    "core-js": "^3.6.4",
    "@folio/stripes-components": "^10.0.0",
    "@folio/stripes-connect": "^7.0.0",
    "@folio/stripes-cli": "^2.0.0",
    "@formatjs/cli": "^4.2.20",
    "localforage": "^1.5.6",
    "@bigtest/convergence": "^1.1.1",
    "@bigtest/interactor": "^0.9.1",
    "@bigtest/mocha": "^0.5.2",
    "@bigtest/react": "^0.1.2",
    "@folio/eslint-config-stripes": "^5.1.0",
    "regenerator-runtime": "^0.13.3",
    "babel-eslint": "^10.0.3",
    "chai": "^4.2.0",
    "eslint": "^6.2.1",
    "mocha": "^8.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-intl": "^5.7.0",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "sinon": "^7.2.2"
  },
  "dependencies": {
    "@folio/react-intl-safe-html": "^3.0.0",
    "lodash": "^4.17.4",
    "prop-types": "^15.6.0"
  },
  "peerDependencies": {
    "@folio/stripes": "^7.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-intl": "^5.7.0",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0"
  }
}

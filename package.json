{
  "name": "@folio/servicepoints",
  "version": "7.1.0",
  "description": "Service Points handler for Stripes",
  "repository": "folio-org/ui-servicepoints",
  "publishConfig": {
    "registry": "https://repository.folio.org/repository/npm-folio/"
  },
  "license": "Apache-2.0",
  "main": "src/index.js",
  "stripes": {
    "actsAs": [
      "handler"
    ],
    "handlerName": "eventHandler",
    "displayName": "ui-servicepoints.meta.title",
    "route": "/",
    "links": {
      "userDropdown": [
        {
          "event": "CHANGE_SERVICE_POINT",
          "caption": "ui-servicepoints.userDropdown.switchServicePoint",
          "check": "checkServicePoints"
        }
      ]
    }
  },
  "scripts": {
    "start": "stripes serve",
    "lint": "eslint .",
    "test": "jest --ci --coverage",
    "build-mod-descriptor": "stripes mod descriptor --full --strict | jq '.[]' > module-descriptor.json ",
    "formatjs-compile": "formatjs compile-folder --ast --format simple ./translations/ui-servicepoints ./translations/ui-servicepoints/compiled"
  },
  "devDependencies": {
    "@folio/eslint-config-stripes": "^7.0.0",
    "@folio/jest-config-stripes": "^2.0.0",
    "@folio/stripes": "^9.0.0",
    "@folio/stripes-cli": "^3.0.0",
    "@folio/stripes-components": "^12.0.0",
    "@folio/stripes-connect": "^9.0.0",
    "@folio/stripes-core": "^10.0.0",
    "@formatjs/cli": "^6.1.3",
    "core-js": "^3.6.4",
    "eslint": "^7.32.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-webpack": "^0.13.2",
    "localforage": "^1.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-intl": "^6.4.4",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "regenerator-runtime": "^0.13.3"
  },
  "dependencies": {
    "lodash": "^4.17.4",
    "prop-types": "^15.6.0"
  },
  "peerDependencies": {
    "@folio/stripes": "^9.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-intl": "^6.4.4",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0"
  }
}
